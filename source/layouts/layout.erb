<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "swissjabber" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  </head>

  <body class="<%= page_classes %>">
    <div class="grid-1000">
      <section class="row">
        <header class="col12">
          <a href="http://www.nine.ch">
            <img src="images/logo.png" width="130" height="30">
          </a>
        </header>
      </section>

      <div class="row">
        <div class="col3">&nbsp;</div>
        <a href="/">
          <div class="col6 logo">
          </div>
        </a>
      </div>

      <div class="row content">
        <%= yield %>
      </div>

      <footer class="row">
        <div class="col12">
          © <%= Time.now.year %> Nine Internet Solutions AG - <a href="/agb.html" id="link_to_terms">Allgemeine Geschäftsbedingungen</a>
        </div>
      </footer>
    </div>

  </body>
</html>
